<?xml version='1.0' encoding='utf-8'?>
<odoo>
    
    <record id="view_mail_message_tree" model="ir.ui.view">
        <field name="name">mail.message.tree</field>
        <field name="model">mail.message</field>
        <field name="arch" type="xml">
            <list>
                <field name="model"/>
                <field name="res_id"/>
                <field name="body"/>
                <field name="date"/>
                <field name="author_id"/>
            </list>
        </field>
    </record>

    <record id="view_mail_message_form" model="ir.ui.view">
        <field name="name">mail.message.form</field>
        <field name="model">mail.message</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="model"/>
                            <field name="res_id"/>
                            <field name="body"/>
                            <field name="date"/>
                            <field name="author_id"/>
                        </group>
                        <group>
                            <field name="partner_ids">
                                <list>
                                    <field name="name"/>
                                </list>
                            </field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_mail_message_custom" model="ir.actions.act_window">
        <field name="name">Our Messages</field>
        <field name="res_model">mail.message</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="menu_mail_message_custom"
        name="Messages"
        parent="im_livechat.livechat_config"
        action="action_mail_message_custom"
        sequence="100"/>

</odoo>